---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";

---

<section class="relative py-16">
    <!-- Subtle background pattern/decoration -->
    <div class="absolute inset-0 bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] dark:bg-[radial-gradient(#1f2937_1px,transparent_1px)] [background-size:20px_20px] opacity-50 pointer-events-none"></div>
    
    <Container className="space-y-8 relative z-10">
        <div class="text-center max-w-3xl mx-auto space-y-4">
            <Title>
                <span class="text-primary dark:text-primary/90">Innovators</span> in AI, Healthcare, and Gov-Tech
            </Title>
            <Paragraph className="text-center mx-auto dark:text-gray-300">
                Partnering with leading organizations to deliver breakthrough technologies and transformative solutions.
            </Paragraph>
        </div>
        
        <div class="mt-10 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 justify-items-center items-center">
            <!-- Using available logos from the public directory -->
            <div class="p-5 sm:p-6 rounded-xl bg-white/80 dark:bg-gray-800/30 border border-gray-200 dark:border-gray-700/30 shadow-sm hover:shadow-md transition-all duration-300 flex items-center justify-center group h-24 w-full max-w-[200px]">
                <img src="/logos/dfes-logo-1.png" width="100" height="60" alt="Defense Partner" 
                    class="max-h-10 w-auto object-contain transition-all duration-300 grayscale group-hover:grayscale-0 group-hover:scale-105">
            </div>
            
            <div class="p-5 sm:p-6 rounded-xl bg-white/80 dark:bg-gray-800/30 border border-gray-200 dark:border-gray-700/30 shadow-sm hover:shadow-md transition-all duration-300 flex items-center justify-center group h-24 w-full max-w-[200px]">
                <img src="/logos/" width="100" height="60" alt="Defense Partner" 
                    class="max-h-10 w-auto object-contain transition-all duration-300 grayscale group-hover:grayscale-0 group-hover:scale-105">
            </div>

            <div class="p-5 sm:p-6 rounded-xl bg-white/80 dark:bg-gray-800/30 border border-gray-200 dark:border-gray-700/30 shadow-sm hover:shadow-md transition-all duration-300 flex items-center justify-center group h-24 w-full max-w-[200px] relative overflow-hidden">
                <div class="text-gray-400 dark:text-gray-500 font-medium text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 mx-auto mb-1 opacity-50">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                    </svg>
                    <span class="text-xs">Future Partner</span>
                </div>
            </div>            
            
            <!-- Placeholder for future partner logos -->
            <div class="p-5 sm:p-6 rounded-xl bg-white/80 dark:bg-gray-800/30 border border-gray-200 dark:border-gray-700/30 shadow-sm hover:shadow-md transition-all duration-300 flex items-center justify-center group h-24 w-full max-w-[200px] relative overflow-hidden">
                <div class="text-gray-400 dark:text-gray-500 font-medium text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 mx-auto mb-1 opacity-50">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                    </svg>
                    <span class="text-xs">Future Partner</span>
                </div>
            </div>
            
            <!-- Placeholder for future partner logos -->
            <div class="p-5 sm:p-6 rounded-xl bg-white/80 dark:bg-gray-800/30 border border-gray-200 dark:border-gray-700/30 shadow-sm hover:shadow-md transition-all duration-300 flex items-center justify-center group h-24 w-full max-w-[200px] relative overflow-hidden">
                <div class="text-gray-400 dark:text-gray-500 font-medium text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 mx-auto mb-1 opacity-50">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
                    </svg>
                    <span class="text-xs">Future Partner</span>
                </div>
            </div>
        </div>
        
        <div class="text-center pt-8">
            <a href="#contact" class="inline-flex items-center gap-2 font-medium text-primary dark:text-primary/90 hover:underline transition">
                <span>Become a partner</span>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
            </a>
        </div>
    </Container>
</section>

<style>
    /* Optimize image rendering */
    img {
        image-rendering: auto;
    }
    
    /* Subtle hover animations if motion is allowed */
    @media (prefers-reduced-motion: no-preference) {
        .group {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .group:hover {
            transform: translateY(-3px);
        }
    }
</style>
