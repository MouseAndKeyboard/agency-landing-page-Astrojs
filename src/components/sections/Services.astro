---
import Service from "../cards/Service.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import { services } from "../../utils/data.ts";

type ServicesProps = {
    title: string;
    description: string;
    icon: string
};
---

<section id="services" class="relative pb-16">
    <!-- Decorative background element for visual interest -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-box-bg/20 dark:to-gray-900/10 pointer-events-none"></div>
    
    <Container className="space-y-10 md:space-y-12 relative z-10">
        <div class="text-center max-w-3xl mx-auto space-y-4" id="services">
            <Title>
                <span class="text-primary dark:text-primary/90">Rapid Prototyping</span> & High-Tech R&D
            </Title>
            <Paragraph className="dark:text-gray-300">
                At Teleios, we thrive on solving the hardest technical challenges in record time. Our interdisciplinary experts blend AI, data science, engineering, and domain-specific know-how to deliver tangible prototypes that drive real impact across healthcare, defense, and gov-tech.
            </Paragraph>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            {
                services.map((service: ServicesProps) => {
                    return (
                        <Service title={service.title} description={service.description} icon={service.icon}>
                        </Service>
                    );
                })
            }
        </div>
    </Container>
</section>

<style>
    @media (prefers-reduced-motion: no-preference) {
        #services {
            scroll-margin-top: 80px;
        }
    }
</style>
